{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=nexus;User=root;Password=;",
    "Redis": "localhost:6379"
  },
  "Jwt": {
    "Secret": "YOUR_JWT_SECRET_MUST_MATCH_PHP_APP_KEY_OR_JWT_SECRET",
    "AccessTokenExpiryMinutes": 120,
    "RefreshTokenExpiryDays": 730,
    "MobileAccessTokenExpiryDays": 365,
    "MobileRefreshTokenExpiryDays": 1825
  },
  "PhpApi": {
    "BaseUrl": "http://localhost:8080",
    "Enabled": true
  },
  "Pusher": {
    "AppId": "",
    "Key": "",
    "Secret": "",
    "Cluster": "eu"
  },
  "WebPush": {
    "VapidPublicKey": "",
    "VapidPrivateKey": "",
    "Subject": "mailto:admin@project-nexus.ie"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://staging.timebank.local",
      "https://project-nexus.ie",
      "https://hour-timebank.ie"
    ]
  },
  "RateLimiting": {
    "Login": {
      "MaxAttempts": 5,
      "WindowMinutes": 15
    },
    "Api": {
      "Read": {
        "Limit": 120,
        "WindowMinutes": 1
      },
      "Write": {
        "Limit": 60,
        "WindowMinutes": 1
      },
      "Auth": {
        "Limit": 10,
        "WindowMinutes": 1
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/nexus-.log",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "MigratedEndpoints": {
    "Description": "Endpoints that have been migrated to .NET. Unmigrated endpoints proxy to PHP.",
    "Prefixes": []
  },
  "AllowedHosts": "*"
}
